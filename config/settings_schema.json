[
  {
    "name": "theme_info",
    "theme_name": "Chad GPT Store",
    "theme_version": "1.0.0",
    "theme_author": "Chad GPT Team",
    "theme_documentation_url": "https://github.com/hardcoretiff/CHAD_GPT",
    "theme_support_url": "https://github.com/hardcoretiff/CHAD_GPT/issues"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Brand Colors"
      },
      {
        "type": "color",
        "id": "colors_accent_1",
        "default": "#6366f1",
        "label": "Primary accent color"
      },
      {
        "type": "color",
        "id": "colors_accent_2", 
        "default": "#06b6d4",
        "label": "Secondary accent color"
      },
      {
        "type": "color",
        "id": "colors_text",
        "default": "#1f2937",
        "label": "Text color"
      },
      {
        "type": "color",
        "id": "colors_background",
        "default": "#f9fafb",
        "label": "Background color"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Heading font",
        "info": "Choosing a different font can affect the speed of your store. [Learn more about system fonts.](https://help.shopify.com/en/manual/online-store/os/store-speed/improving-speed#fonts)"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Heading scale",
        "default": 100
      },
      {
        "type": "header",
        "content": "Body text"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4",
        "label": "Body font",
        "info": "Choosing a different font can affect the speed of your store. [Learn more about system fonts.](https://help.shopify.com/en/manual/online-store/os/store-speed/improving-speed#fonts)"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Body scale",
        "default": 100
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 100,
        "default": 1200,
        "unit": "px",
        "label": "Page width"
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Spacing between template sections",
        "default": 36
      }
    ]
  },
  {
    "name": "Buttons",
    "settings": [
      {
        "type": "header",
        "content": "Button style"
      },
      {
        "type": "range",
        "id": "buttons_border_thickness",
        "min": 0,
        "max": 5,
        "step": 1,
        "unit": "px",
        "label": "Button border thickness",
        "default": 2
      },
      {
        "type": "range",
        "id": "buttons_border_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Button border opacity",
        "default": 100
      },
      {
        "type": "range",
        "id": "buttons_radius",
        "min": 0,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Button corner radius",
        "default": 24
      },
      {
        "type": "range",
        "id": "buttons_shadow_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Button shadow opacity",
        "default": 30
      }
    ]
  },
  {
    "name": "Animations",
    "settings": [
      {
        "type": "header",
        "content": "Hover effects"
      },
      {
        "type": "select",
        "id": "image_hover_effect",
        "options": [
          {
            "value": "none",
            "label": "No effect"
          },
          {
            "value": "zoom-in",
            "label": "Zoom in"
          }
        ],
        "default": "zoom-in",
        "label": "Image hover effect"
      },
      {
        "type": "checkbox",
        "id": "animation_image_zoom",
        "default": true,
        "label": "Enable image zoom animations"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "options": [
          {
            "value": "notification",
            "label": "Notification"
          },
          {
            "value": "drawer",
            "label": "Drawer"
          }
        ],
        "default": "drawer",
        "label": "Cart type"
      },
      {
        "type": "checkbox",
        "id": "show_cart_note",
        "default": true,
        "label": "Enable cart notes"
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "checkbox",
        "id": "predictive_search_enabled",
        "default": true,
        "label": "Enable predictive search"
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_vendor",
        "default": false,
        "label": "Show vendor in search results"
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_price",
        "default": true,
        "label": "Show price in search results"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook"
      },
      {
        "type": "text",
        "id": "social_instagram_link", 
        "label": "Instagram"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter"
      },
      {
        "type": "text",
        "id": "social_snapchat_link",
        "label": "Snapchat"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest"
      },
      {
        "type": "text",
        "id": "social_tumblr_link",
        "label": "Tumblr"
      }
    ]
  }
]